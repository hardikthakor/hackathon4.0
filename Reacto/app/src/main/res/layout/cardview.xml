<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp">

    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@drawable/blueopacity"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/blueopacity"
            >
            <ImageButton
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/loc_img"
                android:src="@drawable/ic_launcher_background"
                />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/loc_img"
                android:id="@+id/locTitle1"
                android:text="Type:"
                android:textStyle="bold"
                android:textSize="20dp"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/locTitle1"
                android:id="@+id/locTitle"
                android:textStyle="bold"
                android:text="type name"
                android:textSize="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/loc_img"
                android:text="Severity:"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:id="@+id/tvsev"
                android:paddingTop="60dp"
                android:textSize="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/tvsev"
                android:textStyle="bold"
                android:text="type"
                android:id="@+id/sever"
                android:paddingTop="60dp"
                android:textSize="20dp"/>



        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
